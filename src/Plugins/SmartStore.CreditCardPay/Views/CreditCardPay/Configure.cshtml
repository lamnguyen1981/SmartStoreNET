@using SmartStore.Web.Framework;
@model SmartStore.CreditCardPay.Models.ConfigurationModel
@{
    Layout = "";
}

<div class="plugin-actions">
    <button type="submit" name="save" value="save" class="btn btn-warning">
        <i class="fa fa-check"></i>
        <span>@T("Admin.Common.Save")</span>
    </button>
</div>

@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })

<div class="alert alert-info">
    Need to input Heartland secret Key
</div>

@using (Html.BeginForm())
{
    <div class="adminContent">

        <div class="adminRow">
            <div class="adminTitle">
                @Html.SmartLabelFor(model => model.HearlandSecretKey)
            </div>
            <div class="adminData">
                @Html.SettingEditorFor(model => model.HearlandSecretKey)
                @Html.ValidationMessageFor(model => model.HearlandSecretKey)
            </div>
        </div>
    </div>
}
